@page "/payment/{TransactionId:int}/qrcode"

<div class="d-flex align-content-center justify-center gap-3 mt-3">
    <MudGrid Class="justify-space-between" Style="max-width: 400px;">
        <MudItem xs="12">
            <div class="d-flex justify-center">
                <MudText Typo="Typo.h6">HSBC Bank</MudText>
            </div>
        </MudItem>
        <MudItem xs="12">
            @if(!string.IsNullOrEmpty(qrCodeSvg))
            {
                @((MarkupString)qrCodeSvg)
            }
        </MudItem>
        
        <MudItem xs=12>
            <div class="d-flex justify-center">
                <MudButton Variant="Variant.Filled" Color="Color.Secondary">
                    @* @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    } *@
                    Pay
                </MudButton>
            </div>

        </MudItem>
    </MudGrid>
</div>